{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "paths": {
            "*": [
                "types/*"
            ],
            "@src/*": [
                "src/*"
            ],
            "@db/*": [
                "src/database/*"
            ],
            "@service/*": [
                "src/service/*"
            ],
            "@entity/*": [
                "src/entity/*"
            ],
            "@util/*": [
                "src/util/*"
            ],
            "@app/*": [
                "src/app/*"
            ],
        }
    },
    "lib": [
        "dom"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "strict": true
}